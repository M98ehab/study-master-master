<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText"><![CDATA[
    tools:context="com.mohamed.mozkra.MainActivity">

    ]]>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@mipmap/suez" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/our_gratitute_to_every_single_person_who_shared_us_study_sources"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/faculty"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:contextClickable="false"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />

    <Spinner
        android:id="@+id/department"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faculty"
        android:layout_marginTop="30dp"
        android:contextClickable="false"
        android:visibility="invisible"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />

    <Spinner
        android:id="@+id/year"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/semester"
        android:layout_marginTop="30dp"
        android:contextClickable="false"
        android:visibility="invisible"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />

    <Spinner
        android:id="@+id/semester"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/material"
        android:layout_marginTop="30dp"
        android:contextClickable="false"
        android:visibility="invisible"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />

    <Spinner
        android:id="@+id/material"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:contextClickable="false"
        android:visibility="invisible"
        tools:ignore="ObsoleteLayoutParam,UnusedAttribute"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />

</LinearLayout>
